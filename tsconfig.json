{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",    // Set root directory to the project root
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "db/**/*.ts"],  // Include all TypeScript files in src/ and db/
  "exclude": ["node_modules", "dist"]
}




